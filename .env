SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=noreply@yourdomain.com

# Application Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (if using PostgreSQL later)
DATABASE_URL=postgresql://username:password@localhost:5432/domain_management
